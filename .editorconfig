# .editorconfig
root = true

# 모든 파일에 적용
[*]
charset = utf-8-bom      # 인코딩을 UTF-8 with BOM으로 지정
end_of_line = crlf       # 윈도우 기준 줄바꿈(CRLF)
insert_final_newline = true
trim_trailing_whitespace = true

# 소스와 헤더 파일에만 적용
[*.{c,cpp,cxx,h,hpp}]
indent_style = space
indent_size = 4
charset = utf-8-bom      # C/C++ 파일은 반드시 UTF-8 BOM 저장

# CMake 파일에 적용
[CMakeLists.txt]
indent_style = space
indent_size = 2
charset = utf-8          # BOM 없는 UTF-8도 무방

# 윈도우 전용 파일이 CRLF가 더 편하면 예외 처리
# 
# [*.sln]
# end_of_line = crlf
# [*.vcxproj]
# end_of_line = crlf

